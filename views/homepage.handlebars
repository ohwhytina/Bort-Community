
{{> main-header post.main-header}}

<!-- filter menu -->
<form class="uk-background-muted">
  <fieldset class="uk-fieldset uk-padding-remove-bottom uk-padding-small">
    <p class="uk-text-center">Filter by station:</p>
    <div class="uk-margin uk-align-center uk-width-1-3">
      <select name="departing-train" class="uk-select">
        <option value="">Please select station...</option>
          <div class="stations">
            
            {{#each bartname }}
            <option>
            <p data-stationname= {{ this.stationname}}>
              {{ this.name }}
            </p>
            </option>
            {{/each }}
            
          </div>
      </select>
      <a type= "button" class="uk-align-center uk-button uk-button-primary filter" href="/">Search</a>
    </div>
  </fieldset>
</form>

<!-- posts section -->


  {{#if posts.length}}
  
    {{#each posts as |post|}}
    {{> post-info post}}
    {{/each}}


  {{/if}}


<script src="/javascript/filter-station.js"></script>