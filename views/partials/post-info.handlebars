
<section class="post" name="post" value="{{depart_station}}">

      <article class=" uk-padding uk-card-secondary uk-padding-remove-bottom uk-comment uk-visible-toggle" tabindex="-1">
        <header class="uk-comment-header uk-position-relative">
          <div class="uk-grid-medium uk-flex-middle uk-grid">
            <div class="uk-width-expand">

              <article name="dep-station">
              <li><a href="#"></a><div value="post-depart-station">{{depart_station}}</div></li>
              </article>
             

              <ul class="uk-comment-meta uk-subnav uk-subnav-divider uk-margin-remove-top">
                <li>{{user.username}}</li>
                <li>{{format_date created_at}}</li>
                <li><a href="/post/{{id}}">Comments</a></li>
              </ul>
            </div>
          </div>
        </header>
        <div class="uk-comment-body">
          <p>{{content}}</p>
        </div>
        <hr class="uk-divider-icon">
        </section>
   
